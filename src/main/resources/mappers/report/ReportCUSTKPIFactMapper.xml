<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaekdam.gaekdambe.analytics_service.report.dashboard.command.mapper.ReportCUSTKPIFactMapper">

    <resultMap id="ReportCUSTKPIFactResult" type="com.gaekdam.gaekdambe.analytics_service.report.dashboard.command.domain.entity.ReportCUSTKPIFact">
        <result property="kpiDate" column="kpi_date" />
        <result property="hotelGroupCode" column="hotel_group_code" />
        <result property="repeatCustomerRate" column="repeat_customer_rate" />
        <result property="membershipRate" column="membership_rate" />
        <result property="personalRatio" column="personal_ratio" />
        <result property="corporateRatio" column="corporate_ratio" />
        <result property="groupRatio" column="group_ratio" />
        <result property="foreignCustomerRate" column="foreign_customer_rate" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findByDateAndGroup" resultMap="ReportCUSTKPIFactResult">
        SELECT * FROM ReportCUSTKPIFact WHERE kpi_date = #{kpiDate} AND hotel_group_code = #{hotelGroupCode}
    </select>

</mapper>
