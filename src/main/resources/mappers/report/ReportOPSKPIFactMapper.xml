<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaekdam.gaekdambe.analytics_service.report.dashboard.command.mapper.ReportOPSKPIFactMapper">

    <resultMap id="ReportOPSKPIFactResult" type="com.gaekdam.gaekdambe.analytics_service.report.dashboard.command.domain.entity.ReportOPSKPIFact">
        <result property="kpiDate" column="kpi_date" />
        <result property="hotelGroupCode" column="hotel_group_code" />
        <result property="occupancyRate" column="occupancy_rate" />
        <result property="remainingRooms" column="remaining_rooms" />
        <result property="checkinCount" column="checkin_count" />
        <result property="checkoutCount" column="checkout_count" />
        <result property="plannedCheckinCount" column="planned_checkin_count" />
        <result property="plannedCheckoutCount" column="planned_checkout_count" />
        <result property="adr" column="adr" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findByDateAndGroup" resultMap="ReportOPSKPIFactResult">
        SELECT * FROM ReportOPSKPIFact WHERE kpi_date = #{kpiDate} AND hotel_group_code = #{hotelGroupCode}
    </select>

</mapper>
