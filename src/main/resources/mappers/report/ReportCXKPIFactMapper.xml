<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaekdam.gaekdambe.analytics_service.report.dashboard.command.mapper.ReportCXKPIFactMapper">

    <resultMap id="ReportCXKPIFactResult" type="com.gaekdam.gaekdambe.analytics_service.report.dashboard.command.domain.entity.ReportCXKPIFact">
        <result property="kpiDate" column="kpi_date" />
        <result property="hotelGroupCode" column="hotel_group_code" />
        <result property="totalRequests" column="total_requests" />
        <result property="totalInquiryCount" column="total_inquiry_count" />
        <result property="claimCount" column="claim_count" />
        <result property="unresolvedCount" column="unresolved_count" />
        <result property="resolvedCount" column="resolved_count" />
        <result property="avgResponseTime" column="avg_response_time" />
        <result property="slaViolationRate" column="sla_violation_rate" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findByDateAndGroup" resultMap="ReportCXKPIFactResult">
        SELECT * FROM ReportCXKPIFact WHERE kpi_date = #{kpiDate} AND hotel_group_code = #{hotelGroupCode}
    </select>

</mapper>
